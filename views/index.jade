                a.text-success.col-md-2(name='Design', value='#', href='javascript:;') Design
    // 工作性质栏
    .container.bod
        dl
            dt.title 工作性质
            dd
                a.text-success.col-md-2(name='Volunteer', value='600230', href='javascript:;') Volunteer
                a.text-success.col-md-2(name='Permanent', value='600230', href='javascript:;') Permanent
