extends layout

block content
    script(type='text/javascript').
        if(!sessionStorage.login||sessionStorage.login==='undefined'){
            alert('请先登录!');
            window.location.href='/';
        }
        $(function () {
            let email=sessionStorage.useremail;
            let password;
            let cname;
            let cadd;
            let cpro;
            $.post('/personal_info/get_info',{email},function (result) {
                result=JSON.parse(result);
                console.log(result);
                console.log(result.password,result.cname);
                password=result.password;
                cname=result.cname;
                cadd=result.cadd;
                cpro=result.cpro;
                $('#eid').append(email);
                $('#pw').append(password);
                $('#cname').append(cname);
                $('#cadd').append(cadd);
                $('#cpro').append(cpro);
            });
        })
        
        
        function change_info() {

        }
    link(rel='stylesheet',href='/stylesheets/personalInfo.css')
    .container
      .row
        // 左侧：个人信息及修改
        #my-infomation.col-md-5
          .panel.panel-default
            .panel-heading
              h2.panel-title.text-center
                span.glyphicon.glyphicon-user
                span.split
                | 用户信息
            .panel-body
              ul.list-group
                li.list-group-item#eid
                  span.glyphicon.glyphicon-envelope
                  span.split
                  | 邮箱
                li.list-group-item#pw
                  span.glyphicon.glyphicon-lock
                  span.split
                  | 密码
                li.list-group-item#cname
                  span.glyphicon.glyphicon-info-sign
                  span.split
                  | 公司名称
                li.list-group-item#cadd
                  span.glyphicon.glyphicon-map-marker
                  span.split
                  | 公司地址
                li.list-group-item#apro
                  span.glyphicon.glyphicon-tag
                  span.split
                  | 公司所属行业
                // 点击更改按钮后会多出“密码确认”、“现在的密码”两项
              div(style='height: 50px')
              .btn.btn-default.text-center(style='margin-bottom: 15px',data-toggle='modal', data-target='#myModal') 修改信息
              br
              .btn.btn-default.text-center 注销账户
        // 右侧：已发布工作
        #my-posts.col-md-6.col-md-offset-1
          #my-posts-banner.page-header
            h2
              span.glyphicon.glyphicon-list
              span.split
              | 已发布工作
          #my-posts-content
            .panel.panel-default
              .panel-heading
                h3.panel-title 工作A
                .condition 成功发布
              .panel-body
                | 工作职位A
            .panel.panel-default
              .panel-heading
                h3.panel-title 工作B
                .condition 成功发布
              .panel-body
                | 工作职位B
            .panel.panel-default
              .panel-heading
                h3.panel-title 工作C
                .condition 未发布
              .panel-body
                | 工作职位C
            .panel.panel-default
              .panel-heading
                h3.panel-title 工作D
                .condition 未发布
              .panel-body
                | 工作职位D
          // 翻页组件
          nav.text-center(aria-label='Page navigation')
            ul.pagination
              li
                a(href='#', aria-label='Previous')
                  span(aria-hidden='true') «
              li
                a(href='#') 1
              li
                a(href='#') 2
              li
                a(href='#') 3
              li
                a(href='#') 4
              li
                a(href='#') 5
              li
                a(href='#', aria-label='Next')
                  span(aria-hidden='true') »
    // Modal
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#myModalLabel.modal-title Modal title
          .modal-body
            | ...
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Save changes