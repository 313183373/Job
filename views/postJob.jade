                    span.glyphicon.glyphicon-th
        .postCategory
            p.line
                b.need *
                | 工作类型
            select#postJobCategory
                option(value='')
                option(value='研发') 研发
                option(value='教育') 教育
                option(value='市场营销') 市场营销
                option(value='产品经理') 产品经理
                option(value='客户经理') 客户经理
                option(value='业务发展') 业务发展(BD)
                option(value='售前服务') 售前服务
                option(value='通信') 通信
                option(value='售后服务') 售后服务
                option(value='设计') 设计
        .postType
            p.line
                b.need *
                | 工作性质
            select#postJobType
                option(value='')
                option(value='志愿') 志愿
                option(value='全职') 全职
                option(value='兼职') 兼职
                option(value='合同') 合同
        .postTages
